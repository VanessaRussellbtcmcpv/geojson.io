{
    "extends": [
        "@mapbox/eslint-config-mapbox/base",
        "prettier"
    ],
    "plugins": [
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error",
        "strict": 0
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "globals": {
        "mapboxgl": true,
        "MapboxGeocoder": true,
        "MapboxDraw": true,
        "turf": true,
        "CodeMirror": true,
        "Base64": true,
        "d3": true
    },
    "parserOptions": {
        "ecmaVersion": 9
    }
}